<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/tuijian_tuan_img"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tuijian_tuan_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/tuijian_tuan_img"
                android:text="成都-葛洲岛"
                android:textColor="#222222"/>

            <TextView
                android:id="@+id/tuijian_tuan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tuijian_tuan_way"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:text="06/17-06/23"
                android:textColor="#888888"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tuijian_tuan_jieshao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tuijian_tuan_way"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:lines="1"
                android:text="上所有省份城市"
                android:textColor="#888888"/>

            <TextView
                android:id="@+id/tuijian_tuan_peoplenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:text="5"
                android:textColor="#888888"/>

            <ImageView
                android:id="@+id/ic_friends"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@id/tuijian_tuan_peoplenum"
                android:layout_toLeftOf="@id/tuijian_tuan_peoplenum"
                android:background="@drawable/ic_friends"/>

            <TextView
                android:id="@+id/tuijian_tuan_collectionnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tuijian_tuan_peoplenum"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_toLeftOf="@+id/ic_friends"
                android:text="505"
                android:textColor="#888888"/>

            <ImageView
                android:id="@+id/ic_guanzhu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@id/tuijian_tuan_collectionnum"
                android:layout_toLeftOf="@id/tuijian_tuan_collectionnum"
                android:background="@drawable/ic_guanzhu"/>


            <TextView
                android:id="@+id/tuijian_tuan_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tuijian_tuan_peoplenum"
                android:layout_alignLeft="@id/tuijian_tuan_way"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_toLeftOf="@+id/ic_guanzhu"
                android:layout_toRightOf="@+id/tuijian_tuan_img"
                android:ellipsize="end"
                android:lines="1"
                android:text="阿鲁阿鲁阿鲁阿鲁阿鲁阿鲁"
                android:textColor="#0083ef"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>